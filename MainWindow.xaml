<Window x:Class="Chrome_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chrome_Launcher"
        mc:Ignorable="d"
        Title="Chrome Launcher" Height="450" Width="800">
    <Grid>
        <Image Margin="-7,-1,-1,1" Source="/background.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.899"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.342"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Content="Launch" HorizontalAlignment="Left" Margin="281,337,0,0" VerticalAlignment="Top" Width="182" Click="Button_Click"/>
        <TextBox x:Name="PathTextBox" HorizontalAlignment="Left" Margin="-7,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="797"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-419,-2,0,0" VerticalAlignment="Top"/>
        <Label Content="Your Fortnite Path:" HorizontalAlignment="Left" Margin="-7,99,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
